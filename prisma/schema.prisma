generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiToken {
  id         String   @id
  reference  String
  token      String   @db.VarChar(355)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  User       User?    @relation(fields: [userId], references: [id])
  userId     String?

  @@map("api_tokens")
}

model Token {
  id             String   @id
  token          String   @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  expirationDate DateTime
  User           User?    @relation(fields: [userId], references: [id])
  userId         String?

  @@map("tokens")
}

model User {
  id          String     @id
  name        String
  lastName    String
  email       String     @unique()
  phoneNumber String     @unique()
  role        String
  password    String?
  apiTokens   ApiToken[]
  tokens      Token[]
  offers      Offer[]

  @@map("users")
}

model Company {
  id          String @id
  sector      String
  phone       String
  name        String
  CIF         String @unique()
  description String
  companySize String
  recruiterId String

  @@map("companies")
}

model Offer {
  id                     String   @id
  title                  String
  companyName            String
  description            String
  responsabilities       String
  requirements           String
  jobType                String
  contractType           String
  workingDay             String
  skills                 String
  salaryRange            String
  workingHours           String
  departmentOrganization String
  publicationDate        DateTime
  recruiter              User     @relation(fields: [recruiterId], references: [id])
  recruiterId            String
  location               String

  @@map("offers")
}

model CandidateCV {
  id             String @id
  candidateId    String
  description    String
  studies        String
  softSkills     String
  name           String
  lastname       String
  location       String
  languages      String
  jobExperiences String
}
